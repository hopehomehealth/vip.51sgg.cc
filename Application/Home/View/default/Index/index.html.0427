                alert('出现了未知错误:'+data);
            },
        });
    
        function initNoticeList(arr){
            var list = $("#notice-list");
            list.html("");
            for(var i = 0; i < arr.length; i++){
                var item = arr[i];
                var li = $("<li><a href=\"{:U('Home/index/chongzhi#notice')}\" target='_blank'>" + item.title + "</a><span>[" + item.create_time + "]</span></li>");
