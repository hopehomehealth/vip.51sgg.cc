<script>

	function refresh(){
	    window.location.reload();//刷新当前页面.
	}
	$(document).ready(function(){
		$('#wxzfs').click(function(){
			var wxcode=$('input[name="wxzf"]:checked').val();
			var out_trade_no="";
			$.ajax({
				type: 'post',
				url: "{:U('Wei/doweipay')}",
				data: {'data':wxcode},
				async: true,
				success: function(data){
					$('#wxvalue').attr('src','qrcode.php?data='+data.url);
					$('#wxvalue').removeClass('hidden');
					out_trade_no=data.out_trade_no;
				},
				error: function(data){
					alert('出现了未知错误');
				},
			});
			
			
			setInterval(function(){
				$.ajax({
					type:'post',
					url:"{:U('Wei/verify')}",
					data:{'out_trade_no':out_trade_no},
					async:true,
					success:function(data){
						if(data.trade_status=='WX_SUCCESS'){
							//alert('您的充值已经成功');
							refresh();
						}
					},
				});
			},5000);
		});
		
		$('#myTab a').click(function(){
			var currtab=$(this).attr('id');
			if(currtab=='zfbtab'){
				$('#wxvalue').addClass('hidden');
			}
		});
		
		$("input[name=wxzf]").click(function(){
			var wxcode=$('input[name="wxzf"]:checked').val();
			var out_trade_no="";
			$.ajax({
				type: 'post',
				url: "{:U('Wei/doweipay')}",
				data: {'data':wxcode},
				async: true,
				success: function(data){
					$('#wxvalue').attr('src','qrcode.php?data='+data.url);
					$('#wxvalue').removeClass('hidden');
					out_trade_no=data.out_trade_no;
				},
				error: function(data){
					alert('出现了未知错误');
				},
			});
		});
	});
	
